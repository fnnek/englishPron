<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Application"
            prefHeight="400.0" prefWidth="600.0"
            >
    <top>
        <GridPane alignment="BASELINE_CENTER" hgap="10" vgap="10" prefHeight="70">
            <Label GridPane.rowIndex="0" text="English Pronouncion">
                <font>
                    <Font size="24.0"/>
                </font>
            </Label>
        </GridPane>
    </top>
    <center>
        <BorderPane>
            <top>
                <GridPane alignment="CENTER" hgap="20" vgap="20" prefHeight="70">
                    <Button>Start Random</Button>
                </GridPane>
            </top>
            <center>
                <GridPane alignment="TOP_CENTER" hgap="20" vgap="20">
                    <Button fx:id="voiceLessons" GridPane.rowIndex="0" onAction="#handleVoiceLessonsButton">Voice Lessons</Button>
                    <Button GridPane.rowIndex="1">Words Lessons</Button>
                </GridPane>
            </center>
            <bottom>
                <GridPane alignment="CENTER" prefHeight="70">
                    <Button>Create New Lesson</Button>
                </GridPane>
            </bottom>
        </BorderPane>
    </center>
