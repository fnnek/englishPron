<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="VoiceLesson">
    <top>
        <Label text="Voice Lesson">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
    </top>
    <center>
        <GridPane vgap="10" hgap="10" alignment="BASELINE_CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER"/>
            </columnConstraints>
            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </BorderPane.margin>
            <Text GridPane.rowIndex="0">Word #1</Text>
            <Button fx:id="startB" text="Start" GridPane.rowIndex="1" onAction="#handleStartButton"> </Button>
            <Button fx:id="stopB" text="Stop" GridPane.rowIndex="2" onAction="#handleStopButton"
                    disable="true"> </Button>
            <Text fx:id="recognizedText" text="Click start button" GridPane.rowIndex="3"> </Text>
            <GridPane alignment="BASELINE_CENTER" GridPane.rowIndex="4" hgap="10" vgap="10">
                <Button fx:id="previousWord" text="Previous word" GridPane.columnIndex="0"
                        GridPane.rowIndex="0"> </Button>
                <Button fx:id="nextWord" text="Next word" GridPane.columnIndex="1" GridPane.rowIndex="0"> </Button>
            </GridPane>


        </GridPane>
    </center>
    <bottom>
        <GridPane vgap="10" hgap="10" alignment="BASELINE_CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="CENTER"/>
            </columnConstraints>
            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
            </BorderPane.margin>
            <Label text="Your progress in this lesson" GridPane.rowIndex="0">

            </Label>

            <ProgressBar fx:id="lessonProgressBar" prefHeight="20.0" prefWidth="200.0" progress="0.0"
                         GridPane.rowIndex="1">

            </ProgressBar>
        </GridPane>
    </bottom>


</BorderPane>
