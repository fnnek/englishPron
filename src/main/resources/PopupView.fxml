<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.collections.FXCollections?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="PopupView"
          prefHeight="400.0" prefWidth="600.0" alignment="TOP_CENTER" vgap="30" hgap="30">
    <Label text="Choose lesson" GridPane.rowIndex="0" >
        <Font size="18"/>
    </Label>
    <ComboBox promptText="Choose lesson" GridPane.rowIndex="1" >
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Lesson 1"/>
                <String fx:value="Lesson 2"/>
                <String fx:value="Lesson 3"/>
                <String fx:value="Lesson 4"/>
                <String fx:value="Lesson 5"/>
            </FXCollections>
        </items>
    </ComboBox>

    <Button GridPane.rowIndex="2" >Start</Button>


</GridPane>
