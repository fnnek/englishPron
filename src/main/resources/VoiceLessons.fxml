            </ComboBox>

            <Button maxHeight="80.0" maxWidth="300.0" minHeight="50.0" onAction="#handleStartLessonButton" style="-fx-background-color: #F03C5F; -fx-text-fill:#FFFFFF" GridPane.rowIndex="2" text="Start">
