<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="VoiceLesson">
    <top>
        <Label text="Voice Lesson">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
    </top>
    <center>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints halignment="CENTER"/>
            </columnConstraints>
            <Text GridPane.rowIndex="0">Word #1</Text>
            <Button fx:id="startB" text="Start"  GridPane.rowIndex="1" onAction="#handleStartButton"> </Button>
            <Button fx:id="stopB" text="Stop"  GridPane.rowIndex="2" onAction="#handleStopButton" disable="true"> </Button>
            <Text fx:id="recognizedText" text="Click start button" GridPane.rowIndex="3"> </Text>
        </GridPane>
    </center>


</BorderPane>
